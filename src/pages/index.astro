---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import logo from '../assets/logo/logo-sin-fondo.webp';
import QuizInteractive from '../components/QuizInteractive.astro';
import EmtExplanation from '../components/EmtExplanation.astro';
import Testimonials from '../components/Testimonials.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-light text-black">
        <Header />
        <main class="flex flex-col items-center min-h-screen  w-full">
            <!-- Hero Section -->

            <section class="w-full h-screen bg-cover bg-center flex items-center justify-center relative">
                <div class="absolute inset-0 bg-azul bg-opacity-50 backdrop-blur-sm"></div>
                <div class="z-10 text-center space-y-6 px-4 ">
                  <img src={logo.src} alt="Logo NERVUX" class="mx-auto w-40 sm:w-56 md:w-72  mt-[-40px]" loading="lazy" />
                  <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight leading-tight text-white ">
                    Estimula tu mente, transforma tu vida
                  </h1>
                  <p class="text-lg sm:text-xl text-white max-w-2xl mx-auto">
                    Descubre el poder de la neurotecnología con NERVUX. Potenciamos tu bienestar con tecnología avanzada y terapias seguras.
                  </p>
                  <a href="/tratamientos" class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl text-white font-semibold transition-all duration-300">
                    Nuestros servicios
                  </a>
                </div>
              </section>

            <!-- EMT Explanation Section -->
             <EmtExplanation/>

    <!-- Interactive Quiz Advanced -->
<QuizInteractive client:visible  />

          


            <!-- Testimonials Section -->

            <Testimonials/>
          
            <!-- Contact Section -->
            <section class="w-full max-w-4xl p-8 bg-white shadow-lg rounded-2xl">
    <p class="text-lg  mb-4">¿Tienes alguna pregunta? ¡Estamos aquí para ayudarte!</p>
    <a
      href="https://wa.me/message/KKV26ZI6AGNEK1"
      class="inline-block px-8 py-4 bg-green-500 hover:bg-green-600 text-white font-bold rounded-xl shadow-lg text-lg transition-all duration-300 animate-bounce-on-view"
      id="contacto-btn"
    >
      ¡Contáctanos por WhatsApp!
    </a>
</section>
        </main>
        <Footer />
    </body>
</html>

<style>
@keyframes gradientAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
@keyframes bounce {
  0%, 100% { transform: translateY(0);}
  20% { transform: translateY(-18px);}
  40% { transform: translateY(0);}
  60% { transform: translateY(-8px);}
  80% { transform: translateY(0);}
}
.animate-bounce-on-view {
  animation: none;
}
.animate-bounce-on-view.active {
  animation: bounce 1.5s cubic-bezier(.28,.84,.42,1) 5;
}

.animated-gradient {
  background: linear-gradient(270deg, #1b56ac, #1b56ac, #34adea);
  background-size: 400% 400%;
  animation: gradientAnimation 15s ease infinite;
}

.animate-svg {
  animation: svgMove 8s ease-in-out infinite;
}

.hover-title {
    transition-transform transform hover:scale-105 hover:shadow-xl;
}
</style>
<script>
if (typeof window !== "undefined") {
  const btn = document.getElementById('contacto-btn');
  if (btn) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            btn.classList.add('active');
          } else {
            btn.classList.remove('active');
          }
        });
      },
      { threshold: 0.5 }
    );
    observer.observe(btn);
  }
}
</script>