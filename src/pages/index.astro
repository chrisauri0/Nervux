---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import logo from "../assets/logo/logo-sin-fondo.webp";
import EmtExplanation from "../components/EmtExplanation.astro";
import QuizInteractive from "../components/QuizInteractive.astro";
import Testimonials from "../components/Testimonials.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-light text-black">
    <Header />
    <main class="flex flex-col items-center min-h-screen w-full">
      <!-- Hero Section -->

      <section
        class="w-full h-screen bg-cover bg-center flex items-center justify-center relative"
      >
        <div
          class="absolute inset-0 bg-custom-azul bg-opacity-50 backdrop-blur-sm"
        >
        </div>
        <div class="z-10 text-center space-y-6 px-4">
          <img
            src={logo.src}
            alt="Logo NERVUX"
            class="mx-auto w-40 sm:w-56 md:w-72 mt-[-40px]"
            loading="lazy"
          />
          <h1
            class="text-4xl sm:text-5xl font-extrabold tracking-tight leading-tight text-white"
          >
            Estimula tu mente, transforma tu vida
          </h1>
          <p class="text-lg sm:text-xl text-white max-w-2xl mx-auto">
            Descubre el poder de la neurotecnología con NERVUX. Potenciamos tu
            bienestar con tecnología avanzada y terapias seguras.
          </p>
          <a
            href="/tratamientos"
            class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl text-white font-semibold transition-all duration-300"
          >
            Nuestros servicios
          </a>
        </div>
      </section>

      <!-- EMT Explanation Section -->
      <EmtExplanation />

      <QuizInteractive />

      <!-- Interactive Quiz Advanced -->

      <!-- Testimonials Section -->

      <Testimonials />

      <!-- Contact Section -->
      <section
        class="relative w-full p-8 bg-custom-azul overflow-hidden flex flex-col items-center"
      >
        <div class="relative z-10 flex flex-col items-center">
          <h2
            class="text-2xl sm:text-3xl font-extrabold text-white mb-2 drop-shadow"
          >
            ¿Tienes alguna pregunta?
          </h2>
          <p
            class="hidden md:block text-lg text-white mb-6 max-w-xl text-center mt-8"
          >
            ¡Estamos aquí para ayudarte! Escríbenos por WhatsApp y te
            responderemos lo antes posible.
          </p>
          <!-- <p
            class="block md:hidden text-lg text-white mb-6 max-w-xl text-center mt-8"
          >
            ¡Estamos aquí para ayudarte!
          </p> -->

          <a
            href="https://wa.me/message/KKV26ZI6AGNEK1"
            class="inline-flex items-center gap-3 px-8 py-4 bg-green-500 hover:bg-green-600 text-white font-bold rounded-xl shadow-xl text-lg transition-all duration-300 animate-bounce-on-view focus:outline-none focus:ring-4 focus:ring-green-300"
            id="contacto-btn"
          >
            <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.52 3.48A11.93 11.93 0 0 0 12 0C5.37 0 0 5.37 0 12c0 2.11.55 4.17 1.6 6.01L0 24l6.18-1.62A11.93 11.93 0 0 0 12 24c6.63 0 12-5.37 12-12 0-3.19-1.24-6.19-3.48-8.52zM12 22c-1.85 0-3.67-.5-5.23-1.45l-.37-.22-3.67.96.98-3.58-.24-.37A9.93 9.93 0 0 1 2 12c0-5.52 4.48-10 10-10s10 4.48 10 10-4.48 10-10 10zm5.2-7.8c-.28-.14-1.65-.81-1.9-.9-.25-.09-.43-.14-.61.14-.18.28-.7.9-.86 1.08-.16.18-.32.2-.6.07-.28-.14-1.18-.44-2.25-1.41-.83-.74-1.39-1.65-1.55-1.93-.16-.28-.02-.43.12-.57.13-.13.28-.34.42-.51.14-.17.18-.29.28-.48.09-.19.05-.36-.02-.5-.07-.14-.61-1.47-.84-2.01-.22-.53-.45-.46-.61-.47-.16-.01-.35-.01-.54-.01-.19 0-.5.07-.76.34-.26.27-1 1-.98 2.43.02 1.43 1.03 2.81 1.18 3.01.15.2 2.03 3.1 4.93 4.22.69.3 1.23.48 1.65.61.69.22 1.32.19 1.82.12.56-.08 1.65-.67 1.89-1.32.23-.65.23-1.21.16-1.32-.07-.11-.25-.18-.53-.32z"
              ></path>
            </svg>
            ¡Contáctanos por WhatsApp!
          </a>
          <p class="mt-6 text-sm text-black opacity-80">
            Atención personalizada · Respuesta rápida · Confidencial
          </p>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  @keyframes gradientAnimation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    20% {
      transform: translateY(-18px);
    }
    40% {
      transform: translateY(0);
    }
    60% {
      transform: translateY(-8px);
    }
    80% {
      transform: translateY(0);
    }
  }
  .animate-bounce-on-view {
    animation: none;
  }
  .animate-bounce-on-view.active {
    animation: bounce 1.5s cubic-bezier(0.28, 0.84, 0.42, 1) 5;
  }
</style>
<script>
  if (typeof window !== "undefined") {
    const btn = document.getElementById("contacto-btn");
    if (btn) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              btn.classList.add("active");
            } else {
              btn.classList.remove("active");
            }
          });
        },
        { threshold: 0.5 }
      );
      observer.observe(btn);
    }
  }
</script>
